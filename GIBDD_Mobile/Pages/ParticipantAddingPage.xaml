<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GIBDD_Mobile.Pages.ParticipantAddingPage"
             Title="Добавление участника ДТП">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Фамилия" Text="{Binding Surname}"/>
            <Entry Placeholder="Имя" Text="{Binding Name}"/>
            <Entry Placeholder="Отчество" Text="{Binding Patronymic}"/>
            <Entry Placeholder="Номер В/У" Text="{Binding LicenseNum}"/>
            <Button Text="Сохранить" x:Name="btnSave" Clicked="btnSave_Clicked" 
                    Background="DeepSkyBlue" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>