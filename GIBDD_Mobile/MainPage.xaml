<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GIBDD_Mobile.MainPage" Title="ГИБДД">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300">
        <Label Text="Вход" FontSize="40" HorizontalOptions="Center" Margin="0,0,0,60"/>
        <Entry Placeholder="Логин" x:Name="entLogin"/>
        <Entry Placeholder="Пароль" IsPassword="True" Margin="0,0,0,20" x:Name="entPassword"/>
        <Button Text="Войти" x:Name="btnEnter" Clicked="btnEnter_Clicked"/>
    </StackLayout>

</ContentPage>
